{
  "env": {
    "development": {
      "presets": [
        "es2015",
        "react",
        "stage-0"
      ],
      "plugins": [
        "transform-object-assign",
        "transform-decorators-legacy",
        "transform-class-properties",
        "jsx-control-statements",
        "transform-object-rest-spread"
      ]
    },
    "test" : {
      "presets": [
        "es2015",
        "react"
      ],
      "plugins": [
        "transform-decorators-legacy",
        "transform-class-properties",
        "transform-object-rest-spread",
        [
          "css-modules-transform",
          {
            "extensions": [
              ".scss"
            ],
            "generateScopedName": "[local]__[name]--[hash:base64:5]"
          }
        ]
      ]
    }
  }
}